{
	"name": "project_name",
	"version": "1.0.0",
	"main": "src/main.js",
	"type": "module",
	"browser": "./main.min.js",
	"private": true,
	"scripts": {
		"requirements": "pnpm global add --ignore-optional parcel shx",
		"clean": "shx rm -f main.js && shx rm -f main.js.map",
		"release": "pnpm clean && parcel build --no-cache --no-source-maps --target browser",
		"build": "pnpm clean && parcel build --no-cache --target browser",
		"watch": "pnpm clean && parcel watch --no-cache --target browser --no-hmr"
	},
	"browserslist": "since 2020-01",
	"targets": {
		"browser": {
			"source": "./src/main.js",
			"optimize": true,
			"includeNodeModules": true
		}
	},
	"devDependencies": {
		"froxel": "^2.2.0",
		"parcel": "^2.4.1",
		"shx": "^0.3.4"
	}
}
